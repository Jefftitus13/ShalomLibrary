@model ShalomLibrary.Models.UpdateBookViewModel
@{
}
<h1>Edit Book</h1>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Book Title</label>
        <input type="text" class="form-control" asp-for="BookTitle">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Genre</label>
        <input type="text" class="form-control" asp-for="Genre">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Year Published</label>
        <input type="number" class="form-control" asp-for="YearPublished">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Available copies</label>
        <input type="number" class="form-control" asp-for="CopiesAvailable">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Books">Delete</button>
</form>